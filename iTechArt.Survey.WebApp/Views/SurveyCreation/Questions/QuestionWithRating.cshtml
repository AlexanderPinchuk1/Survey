@model iTechArt.Survey.WebApp.Models.QuestionViewModel

@if (Model.Question.IsEdit)
{
    <div class="card" style="width: 37.5rem;" id="@Model.Question.Id">
        <div class="card-body">
            <form>
                <partial name="Questions/Shared/HeaderEditingQuestionPartial" model="@Model" />
                <div class="rating">
                    <input type="radio" name="rating @Model.Question.Id" value="5" id="@Model.Question.Id+5">
                    <label for="@Model.Question.Id+5">☆</label>
                    <input type="radio" name="rating @Model.Question.Id" value="4" id="@Model.Question.Id+4">
                    <label for="@Model.Question.Id+4">☆</label>
                    <input type="radio" name="rating @Model.Question.Id" value="3" id="@Model.Question.Id+3">
                    <label for="@Model.Question.Id+3">☆</label>
                    <input type="radio" name="rating @Model.Question.Id" value="2" id="@Model.Question.Id+2">
                    <label for="@Model.Question.Id+2">☆</label>
                    <input type="radio" name="rating @Model.Question.Id" value="1" id="@Model.Question.Id+1">
                    <label for="@Model.Question.Id+1">☆</label>
                </div>
                <partial name="Questions/Shared/FooterEditingQuestionPartial" model="@Model" />
            </form>
        </div>
    </div>
}
else
{
    <div class="card" style="width: 37.5rem; border: 0;" id="@Model.Question.Id">
        <div class="card-body">
            <partial name="Questions/Shared/HeaderQuestionPartial" model="@Model" />
            <div class="rating">
                <input type="radio" name="rating @Model.Question.Id" value="5" id="@Model.Question.Id+5">
                <label for="@Model.Question.Id+5">☆</label>
                <input type="radio" name="rating @Model.Question.Id" value="4" id="@Model.Question.Id+4">
                <label for="@Model.Question.Id+4">☆</label>
                <input type="radio" name="rating @Model.Question.Id" value="3" id="@Model.Question.Id+3">
                <label for="@Model.Question.Id+3">☆</label>
                <input type="radio" name="rating @Model.Question.Id" value="2" id="@Model.Question.Id+2">
                <label for="@Model.Question.Id+2">☆</label>
                <input type="radio" name="rating @Model.Question.Id" value="1" id="@Model.Question.Id+1">
                <label for="@Model.Question.Id+1">☆</label>
            </div>
        </div>
    </div>
}