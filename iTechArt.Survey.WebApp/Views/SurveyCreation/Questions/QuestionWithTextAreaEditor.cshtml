@model iTechArt.Survey.WebApp.Models.QuestionViewModel


@if (Model.Question.IsEdit)
{
    <div class="card" style="width: 37.5rem;" id="@Model.Question.Id">
        <div class="card-body">
            <form>
                <partial name="Questions/Shared/HeaderEditingQuestionPartial" model="@Model" />

                <div class="textarea-block">
                    <textarea name="content" id="@("TextArea" + Model.Question.Id)"></textarea>
                </div>

                <partial name="Questions/Shared/FooterEditingQuestionPartial" model="@Model" />
            </form>
        </div>
    </div>
}
else
{
    <div class="card" style="width: 37.5rem; border: 0;" id="@Model.Question.Id">
        <div class="card-body">
            <partial name="Questions/Shared/HeaderQuestionPartial" model="@Model" />

            <div class="textarea-block">
                <textarea name="content" id="@("TextArea" + Model.Question.Id)"></textarea>
            </div>
        </div>
    </div>
}
<script src="https://cdn.ckeditor.com/ckeditor5/28.0.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector( '#TextArea' + "@Model.Question.Id"),
            {
                toolbar: ['heading', '|', 'bold', 'italic', 'link', 'bulletedList', 'numberedList', 'blockQuote'],
                heading:
                {
                    options: [
                        { model: 'paragraph', title: 'Paragraph', class: 'ck-heading_paragraph' },
                        { model: 'heading1', view: 'h1', title: 'Heading 1', class: 'ck-heading_heading1' },
                        { model: 'heading2', view: 'h2', title: 'Heading 2', class: 'ck-heading_heading2' }]
                }
            })
        .catch(error => {
            console.log(error);
        });
</script>
