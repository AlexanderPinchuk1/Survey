@model iTechArt.Survey.WebApp.Models.QuestionViewModel

<input type="hidden" asp-for="Question.Type">

<div class="edit-question-block-header">
    <div class="edit-question-block-main-header">
        <a class="btn btn-light btn-sm" style="background-color: white; border: 0" asp-action="ChangeQuestionPosition" asp-controller="SurveyCreation" asp-route-questionId="@Model.Question.Id" asp-route-up="false">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 1a.5.5 0 0 1 .5.5v11.793l3.146-3.147a.5.5 0 0 1 .708.708l-4 4a.5.5 0 0 1-.708 0l-4-4a.5.5 0 0 1 .708-.708L7.5 13.293V1.5A.5.5 0 0 1 8 1z"/>
            </svg>
        </a>
        <div class="question-move-block">
            <a class="btn btn-light btn-sm" style="background-color: white; border: 0" asp-action="ChangeQuestionPosition" asp-controller="SurveyCreation" asp-route-questionId="@Model.Question.Id" asp-route-up="true">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-up" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5z"/>
                </svg>
            </a>
        </div>
    </div>
    <div class="question-checkbox-block">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="isRequired" asp-for="Question.IsRequired">
            <label class="form-check-label" for="isRequired">
                Required
            </label>
        </div>
    </div>
    <div class="edit-question-icon">
        <a class="btn btn-danger btn-sm" asp-action="DeleteQuestion" asp-controller="SurveyCreation" asp-route-questionId="@Model.Question.Id">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
            </svg>
        </a>
    </div>
</div>

<div class="edit-question-block">
    <div class="question-edit-block ">
        @if (Model.IsQuestionHaveNumber)
        {
            <h5>@Model.Number. </h5> 
        }
    </div>
    <div class="edit-question-description ">
        <input class="form-control" asp-for="Question.Description"/>
    </div>
</div>