@model iTechArt.Survey.WebApp.Models.DisplayUsersViewModel

<partial name="_MenuPartial" />
<div class="add-user-block">
    <a asp-action="AddUser" asp-controller="Administration" class="btn btn-secondary btn-block">Add User</a>
</div>
<div class="users-table-block">
    <table class="table">
        <thead class="thead-light">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Role</th>
            <th scope="col">Registered</th>
            <th scope="col">Surveys (➕/✔)</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        @foreach (var user in Model.UsersInfo)
        {
            <tr class="users-columns">
                <td style="width: 35%">
                    @user.DisplayName
                </td>
                <td style="width: 15%">
                    @user.Role
                </td>
                <td style="width: 20%">
                    @user.RegistrationDateTime.ToShortDateString()
                </td>
                <td style="width: 15%">
                    @user.CreatedSurveys / @user.CompletedSurveys
                </td>
                <td style="width: 15%">
                    <a class="btn btn-success" asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                        </svg>
                    </a>
                    <a class="btn btn-danger" asp-action="DeleteUser" asp-controller="Administration" asp-route-id="@user.Id">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </table>
    <div class="table-footer">
        <p>Showing @(((Model.Pagination.PageNumber) * Model.Pagination.ItemCountPerPage) + 1) to @if ((Model.Pagination.PageNumber + 1) * Model.Pagination.ItemCountPerPage < Model.Pagination.TotalCount)
                                                                           {
                                                                               @((Model.Pagination.PageNumber + 1) * Model.Pagination.ItemCountPerPage)
                                                                           }
                                                                           else
                                                                           {
                                                                               @Model.Pagination.TotalCount   
                                                                           }
            of @Model.Pagination.TotalCount users</p>
        <p>Page @(Model.Pagination.PageNumber + 1) of @(Math.Ceiling((double) Model.Pagination.TotalCount / Model.Pagination.ItemCountPerPage))</p>
        <form asp-action="DisplayUsers" asp-controller="Administration">
            <div class="num-items-per-page-main-block">
                <label class="num-items-per-page-label" asp-for="Pagination.ItemCountPerPage"></label>
                <div class="num-items-per-page-block">
                    <div class="col-sm-10">
                        <input type="number" class="form-control" min="1" max="100" asp-for="Pagination.ItemCountPerPage" />
                    </div>
                </div>
            </div>
            <div class="pages-block">
                <input asp-for="Pagination.PageNumber" id="NumPage" type="hidden" value="@Model.Pagination.PageNumber"/>
                <ul class="pagination">
                    <li class="page-item">
                        <button class="page-link" onclick="changePage(-2)"><<</button>
                    </li>
                    <li class="page-item">
                        <button class="page-link" onclick="changePage(-1)"><</button>
                    </li>
                    <li class="page-item">
                        <button class="page-link" onclick="changePage(1)">></button>
                    </li>
                    <li class="page-item">
                        <button class="page-link" onclick="changePage(2)">>></button>
                    </li>
                </ul>
            </div>
        </form>
    </div>
</div>

<script>
     function changePage(num) {
         var res = +document.getElementById("NumPage").value;
         document.getElementById("NumPage").value = res + num;
     }
 </script>